#!/bin/sh

set -e
set -u
set -x


find -ls

tar xf squid/squid.tar.xz --transform 's/^squid-[0-9][0-9.]*/squid/'
cd squid

CFLAGS="-O2 -fPIC" \
CXXFLAGS="$CFLAGS" \
./configure \
		--prefix "${BOSH_INSTALL_TARGET:?}" \
		--disable-arch-native \
		--disable-auto-locale \
		--enable-async-io \
		--enable-auth \
		--enable-follow-x-forwarded-for \
		--with-openssl \
		--with-tls \
		--enable-ssl-crtd \
		--without-cppunit \
		--without-libcap \
		--without-netfilter-conntrack \
		--without-systemd \
		--without-tdb


make -j"$(nproc)"
make install
